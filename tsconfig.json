{
    "exclude": [
      "dist",
      "node_modules"
    ],
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "jsx": "react-jsx",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    //   "declaration": true,
    //   "emitDeclarationOnly": true
    },
    "include": [
      "./lib/**/*",
      "rollup.config.ts",
    ]
  }